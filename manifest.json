{
  "manifest_version": 3,
  "name": "No Hooting Around",
  "version": "1.0",
  "description": "Hoot hoot! Track your goals with an animated owl.",
  "permissions": ["activeTab", "scripting"],
  "host_permissions": ["<all_urls>"],
  "action": {
    "default_popup": "popup.html"
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ]
}
