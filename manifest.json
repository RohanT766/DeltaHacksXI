{
  "manifest_version": 3,
  "name": "Owl Goal Tracker",
  "version": "1.2",
  "description": "Track your goals with the wisdom of an owl!",
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/16.png",
      "48": "icons/48.png",
      "128": "icons/128.png"
    }
  },
  "permissions": ["scripting", "activeTab"],
  "host_permissions": ["<all_urls>"],
  "background": {
    "service_worker": "background.js"
  }
}
